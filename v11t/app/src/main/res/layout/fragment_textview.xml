<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/textView_fragment"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/readView"
        android:layout_width="330dp"
        android:layout_height="220dp"
        android:layout_marginTop="76dp"
        android:background="@drawable/border"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/writeView" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Read Field"
        app:layout_constraintBottom_toTopOf="@+id/readView"
        app:layout_constraintStart_toStartOf="@+id/readView" />

    <EditText
        android:id="@+id/writeView"
        android:layout_width="330dp"
        android:layout_height="220dp"
        android:layout_marginTop="72dp"
        android:background="@drawable/border"
        android:ems="10"
        android:inputType="textMultiLine"
        android:enabled="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Write Field"
        app:layout_constraintBottom_toTopOf="@+id/writeView"
        app:layout_constraintStart_toStartOf="@+id/writeView" />

</androidx.constraintlayout.widget.ConstraintLayout>